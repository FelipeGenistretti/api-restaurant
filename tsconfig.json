{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",                      // <- ESSENCIAL pro CLI do knex funcionar bem
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",                            // <- NECESSÃRIO pra funcionar o "paths"
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"                           // <- (opcional, mas recomendado se for compilar depois)
  },
  "include": ["src/**/*", "knexfile.ts"]
}
